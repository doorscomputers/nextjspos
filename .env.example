# ============================================
# DATABASE CONFIGURATION
# ============================================

# Local Development Database
DATABASE_URL="postgresql://username:password@localhost:5432/ultimatepos_local"

# Production Database (Supabase/PostgreSQL)
PRODUCTION_DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require&pgbouncer=true"

# MySQL Alternative (not recommended for production)
# DATABASE_URL="mysql://username:password@host:3306/database_name"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================

# IMPORTANT: Generate a secure random secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-min-32-characters"

# Update this to your production domain after deployment
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_URL_PRODUCTION="https://your-app-domain.vercel.app"

# OpenAI API Configuration (for AI Assistant feature)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# ============================================
# APPLICATION CONFIGURATION
# ============================================

NEXT_PUBLIC_APP_NAME="Igoro Tech(IT) Inventory Management System"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL_PRODUCTION="https://your-app-domain.vercel.app"

# ============================================
# BACKUP AND MIGRATION CONFIGURATION
# ============================================

# Custom backup directory (optional)
BACKUP_DIR="./backups"

# Backup retention days (optional)
BACKUP_RETENTION_DAYS="30"

# Enable database monitoring (optional)
DB_MONITORING_ENABLED="true"

# Migration webhook URL for notifications (optional)
MIGRATION_WEBHOOK_URL="https://hooks.slack.com/your-webhook-url"

# ============================================
# DEVELOPMENT OPTIONS
# ============================================

# Enable debug logging
DEBUG="false"

# Database query logging
DATABASE_LOGGING="false"

# ============================================
# LICENSE CONFIGURATIONS
# ============================================

