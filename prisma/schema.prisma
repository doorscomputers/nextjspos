model CashierShift {
  id         Int @id @default(autoincrement())
  businessId Int @map("business_id")
  locationId Int @map("location_id")
  userId     Int @map("user_id")

  shiftNumber String    @map("shift_number") @db.VarChar(100)
  openedAt    DateTime  @map("opened_at")
  closedAt    DateTime? @map("closed_at")

  // Cash management
  beginningCash Decimal  @map("beginning_cash") @db.Decimal(22, 4)
  endingCash    Decimal? @map("ending_cash") @db.Decimal(22, 4)
  systemCash    Decimal? @map("system_cash") @db.Decimal(22, 4)

  // Over/Short tracking
  cashOver  Decimal? @map("cash_over") @db.Decimal(22, 4) // Positive = overage
  cashShort Decimal? @map("cash_short") @db.Decimal(22, 4) // Positive = shortage

  // Shift totals (LEGACY - kept for backward compatibility)
  totalSales       Decimal @default(0) @map("total_sales") @db.Decimal(22, 4)
  totalRefunds     Decimal @default(0) @map("total_refunds") @db.Decimal(22, 4)
  totalDiscounts   Decimal @default(0) @map("total_discounts") @db.Decimal(22, 4)
  totalVoid        Decimal @default(0) @map("total_void") @db.Decimal(22, 4)
  transactionCount Int     @default(0) @map("transaction_count")

  // ============================================
  // BIR-COMPLIANT REAL-TIME AGGREGATION FIELDS
  // Updated with each sale for instant X/Z readings
  // ============================================

  // Sales Aggregates (Pre-discount, Pre-VAT)
  runningGrossSales Decimal @default(0) @map("running_gross_sales") @db.Decimal(22, 4) // Total before discounts and VAT
  runningNetSales   Decimal @default(0) @map("running_net_sales") @db.Decimal(22, 4) // Total after discounts and VAT
  runningSubtotal   Decimal @default(0) @map("running_subtotal") @db.Decimal(22, 4) // Total before VAT (after discounts)

  // Transaction Counts
  runningTransactions Int @default(0) @map("running_transactions") // Count of completed sales
  runningVoidCount    Int @default(0) @map("running_void_count") // Count of voided transactions
  runningRefundCount  Int @default(0) @map("running_refund_count") // Count of refunds/returns

  // BIR VAT Calculations (12% VAT in Philippines)
  runningVatableSales Decimal @default(0) @map("running_vatable_sales") @db.Decimal(22, 4) // Sales subject to 12% VAT
  runningVatAmount    Decimal @default(0) @map("running_vat_amount") @db.Decimal(22, 4) // 12% VAT collected
  runningVatExempt    Decimal @default(0) @map("running_vat_exempt") @db.Decimal(22, 4) // VAT-exempt (Senior, PWD)
  runningZeroRated    Decimal @default(0) @map("running_zero_rated") @db.Decimal(22, 4) // Zero-rated sales
  runningNetOfVat     Decimal @default(0) @map("running_net_of_vat") @db.Decimal(22, 4) // Amount excluding VAT

  // Discount Breakdowns (BIR-required)
  runningSeniorDiscount   Decimal @default(0) @map("running_senior_discount") @db.Decimal(22, 4) // Senior Citizen (20% + VAT exempt)
  runningPwdDiscount      Decimal @default(0) @map("running_pwd_discount") @db.Decimal(22, 4) // PWD (20% + VAT exempt)
  runningEmployeeDiscount Decimal @default(0) @map("running_employee_discount") @db.Decimal(22, 4) // Employee discounts
  runningVolumeDiscount   Decimal @default(0) @map("running_volume_discount") @db.Decimal(22, 4) // Volume/bulk discounts
  runningOtherDiscount    Decimal @default(0) @map("running_other_discount") @db.Decimal(22, 4) // Other discounts
  runningTotalDiscounts   Decimal @default(0) @map("running_total_discounts") @db.Decimal(22, 4) // Sum of all discounts

  // Payment Method Breakdowns
  runningCashSales     Decimal @default(0) @map("running_cash_sales") @db.Decimal(22, 4) // Cash payments
  runningCardSales     Decimal @default(0) @map("running_card_sales") @db.Decimal(22, 4) // Credit/Debit card
  runningGcashSales    Decimal @default(0) @map("running_gcash_sales") @db.Decimal(22, 4) // GCash payments
  runningPaymayaSales  Decimal @default(0) @map("running_paymaya_sales") @db.Decimal(22, 4) // PayMaya payments
  runningNfcSales      Decimal @default(0) @map("running_nfc_sales") @db.Decimal(22, 4) // NFC payments
  runningBankSales     Decimal @default(0) @map("running_bank_sales") @db.Decimal(22, 4) // Bank transfer
  runningCheckSales    Decimal @default(0) @map("running_check_sales") @db.Decimal(22, 4) // Check payments
  runningCreditSales   Decimal @default(0) @map("running_credit_sales") @db.Decimal(22, 4) // AR/Credit sales
  runningOtherPayments Decimal @default(0) @map("running_other_payments") @db.Decimal(22, 4) // Other payment methods

  // AR Payment Collections (when previous credit sales are paid)
  runningArPaymentsCash     Decimal @default(0) @map("running_ar_payments_cash") @db.Decimal(22, 4) // AR paid in cash
  runningArPaymentsCard     Decimal @default(0) @map("running_ar_payments_card") @db.Decimal(22, 4) // AR paid by card
  runningArPaymentsGcash    Decimal @default(0) @map("running_ar_payments_gcash") @db.Decimal(22, 4) // AR paid via GCash
  runningArPaymentsPaymaya  Decimal @default(0) @map("running_ar_payments_paymaya") @db.Decimal(22, 4) // AR paid via PayMaya
  runningArPaymentsNfc      Decimal @default(0) @map("running_ar_payments_nfc") @db.Decimal(22, 4) // AR paid via NFC
  runningArPaymentsBank     Decimal @default(0) @map("running_ar_payments_bank") @db.Decimal(22, 4) // AR paid via bank transfer
  runningArPaymentsCheck    Decimal @default(0) @map("running_ar_payments_check") @db.Decimal(22, 4) // AR paid by cheque
  runningArPaymentsOther    Decimal @default(0) @map("running_ar_payments_other") @db.Decimal(22, 4) // AR paid by other methods

  // Void/Refund/Return Tracking
  runningVoidedSales  Decimal @default(0) @map("running_voided_sales") @db.Decimal(22, 4) // Total voided amount
  runningRefundAmount Decimal @default(0) @map("running_refund_amount") @db.Decimal(22, 4) // Total refunds
  runningReturnAmount Decimal @default(0) @map("running_return_amount") @db.Decimal(22, 4) // Total returns

  // Exchange Tracking
  runningExchangeCount Int     @default(0) @map("running_exchange_count") // Count of exchanges
  runningExchangeSales Decimal @default(0) @map("running_exchange_sales") @db.Decimal(22, 4) // Total exchange sales

  // X-Reading and Z-Reading counters
  xReadingCount Int @default(0) @map("x_reading_count") // Number of X-Readings generated
  zReadingCount Int @default(0) @map("z_reading_count") // Number of Z-Readings generated

  // BIR Accumulated Grand Total (for Z-Reading)
  oldGrandTotal    Decimal? @map("old_grand_total") @db.Decimal(22, 4) // Previous shift's accumulated total
  newGrandTotal    Decimal? @map("new_grand_total") @db.Decimal(22, 4) // Current accumulated total (Old + Net Sales)
  accumulatedSales Decimal  @default(0) @map("accumulated_sales") @db.Decimal(22, 4) // Running total across all shifts

  // Status
  status String @default("open") @db.VarChar(20) // open, closed

  // Notes
  openingNotes String? @map("opening_notes") @db.Text
  closingNotes String? @map("closing_notes") @db.Text

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  sales                  Sale[]
  cashInOutRecords       CashInOut[]
  cashDenominations      CashDenomination[]
  freebieLogs            FreebieLog[]
  locationChangeRequests LocationChangeRequest[]
  readings               CashierShiftReading[]   @relation("CashierShiftToReadings")
  arPayments             SalePayment[]

  @@unique([businessId, shiftNumber])
  @@index([businessId])
  @@index([locationId])
  @@index([userId])
  @@index([status])
  @@index([openedAt])
  // Composite index for the common query pattern: businessId + status + locationId
  @@index([businessId, status, locationId])
  // Composite index for user shift queries: businessId + userId + status
  @@index([businessId, userId, status])
  @@map("cashier_shifts")
}

